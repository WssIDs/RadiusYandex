<Window x:Class="Updater.UpdateDownload"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Updater"
        mc:Ignorable="d"
        Title="Загрузка обновления" Height="139.667" Width="420" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Icon="/Updater;component/RadiusYandex.ico" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" TextWrapping="Wrap" Text="Загрузка обновления..." FontSize="14" TextAlignment="Center"/>
        <ProgressBar Grid.Row="1" Name="downloadstatus_pb" Margin="5"/>
        <ProgressBar Grid.Row="2" x:Name="downloadAllstatus_bar" Margin="5"/>
        <TextBlock Grid.Row="3" TextWrapping="Wrap"  Name="progress_tb" Margin="5"/>

    </Grid>
</Window>
